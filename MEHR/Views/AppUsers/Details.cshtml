@model MEHR.Models.AppUser

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>

<div>
    <h4>AppUser</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CookieHash)
        </dt>
        <dd class = "col-sm-10">
                @Html.Raw("0x" + Model.CookieHash.ToString("X"))
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Ratings)
        </dt>
        <dd class = "col-sm-10">
            <ul>
                @{
                    int counter = 1;
					foreach (var rating in Model.Ratings!)
					{
                        <li>
                            <h3>@(counter++). @rating.Location!.Name (@rating.Rating)</h3>
						    <p>@rating.Text</p>
						</li>
					}
                }
			</ul>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.History)
        </dt>
        <dd class = "col-sm-10">
            <ul>
                    @{
                        foreach (var loc in Model.History!)
                        {
                             <li>@loc.Location?.Name (@DateTime.FromBinary(loc.CreationDate).ToString())</li>
                        }
                    }
            </ul>
        </dd>
    </dl>
</div>
<div>
    <a href="/admin/AppUsers/Edit/@Model?.Id">Edit</a> |
    <a href="/admin/AppUsers">Back to List</a>
</div>
</body>
</html>
